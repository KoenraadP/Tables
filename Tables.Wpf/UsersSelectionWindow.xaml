<Window x:Class="Tables.Wpf.UsersSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tables.Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="UsersSelectionWindow" Height="250" Width="260" Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lstUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,58" FontSize="24"/>
        <Button x:Name="btnSelectUser" Content="Dit ben ik!" HorizontalAlignment="Center" Margin="0,136,0,0" VerticalAlignment="Top" Width="260" Click="btnSelectUser_Click" FontSize="24"/>

    </Grid>
</Window>
