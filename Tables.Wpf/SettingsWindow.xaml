        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tables.Wpf"
        mc:Ignorable="d"
        Title="Instellingen" Height="419" Width="400" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <TextBlock Text="Kies tafels" Margin="10" />
            <ComboBox x:Name="cmbExerciseOptions" Width="120" SelectionChanged="CmbExerciseOptions_SelectionChanged"/>
            <Button Content="Save" Width="100" Height="30" Click="SaveSettings_Click" Margin="0,20,0,0"/>
            
            <!--<TextBlock Text="Operations:" Margin="10,20,10,10" />
            <CheckBox Name="MultiplicationCheckBox" Content="Enable Multiplication" IsChecked="True" Margin="10" />
            <CheckBox Name="DivisionCheckBox" Content="Enable Division" IsChecked="True" Margin="10" />-->
